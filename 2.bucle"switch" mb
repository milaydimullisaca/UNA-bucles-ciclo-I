#include <iostream>
using namespace std;
int main() {
    int mb;
    cin>>mb;
    switch(mb)
    {
    case 1 ...500:cout<<mb*2; break;
    case 501 ...1*1024:cout<<mb*1.80; break;
    case 1025 ...2*1024:cout<<mb*1.60; break;
    case 2049 ...4*1024:cout<<mb*1.40; break;
    case 4097 ...10*1024:cout<<mb*0.50; break;
    }
    
   return 0;
}
